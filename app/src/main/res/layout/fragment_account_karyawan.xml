<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_alignParentBottom="true"
        android:scaleX="1"
        android:scaleY="-1"
        android:src="@drawable/gradasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:background="@drawable/profile"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"/>

    <TextView
        android:layout_marginTop="@dimen/_150sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/_15sdp"
        android:backgroundTint="@color/abu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">



        <LinearLayout
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_10sdp"
                android:text="Nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/nama_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <View
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="@dimen/_1sdp"/>

            <TextView
                android:textSize="@dimen/_10sdp"
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tempatlahir_user"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <View
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="@dimen/_1sdp"/>


            <TextView
                android:textSize="@dimen/_10sdp"
                android:text="Posisi yang di lamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/posisi_user"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <View
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="@dimen/_1sdp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvEdit"
            android:layout_marginBottom="@dimen/_75sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:backgroundTint="@color/nusamba"
            app:cardCornerRadius="@dimen/_12sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_20sdp">
            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLogout"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_75sdp"
            android:backgroundTint="@color/nusamba"
            app:cardCornerRadius="@dimen/_12sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp">
            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="Log Out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</RelativeLayout>